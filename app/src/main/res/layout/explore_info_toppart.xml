<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="false"
    android:orientation="vertical"
    android:theme="@style/Theme.TransparentActivity"
    android:windowSoftInputMode="adjustResize"
    tools:context=".MainActivity">
    <LinearLayout
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/SuMExploreInfo_MangaIMG_CornerFix"
                android:clipToOutline="true"
                android:background="@drawable/bg_x_info_corner_adj"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/SuMExploreInfo_MangaIMG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_black_c0dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingTop="8dp"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:fadeScrollbars="false"
                        android:scrollIndicators="none"
                        android:scrollbarAlwaysDrawHorizontalTrack="false"
                        android:scrollbarAlwaysDrawVerticalTrack="false"
                        android:scrollbarSize="0dp"
                        tools:ignore="UselessParent">

                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="12dp"
                                android:layout_height="22dp"
                                android:background="@android:color/transparent" />

                            <TextView
                                android:id="@+id/SuMExploreIndo_Gern_Action"
                                android:layout_width="60dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="8dp"
                                android:alpha="0.86"
                                android:background="@drawable/bg_gern_tr_bor_w_c_fixer"
                                android:fontFamily="@font/varela_round"
                                android:gravity="center"
                                android:text="Ation"
                                android:textColor="@android:color/white"
                                android:textSize="13.5sp"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/SuMExploreIndo_Gern_Drama"
                                android:layout_width="70dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="8dp"
                                android:alpha="0.86"
                                android:background="@drawable/bg_gern_tr_bor_w_c_fixer"
                                android:fontFamily="@font/varela_round"
                                android:gravity="center"
                                android:text="Drama"
                                android:textColor="@android:color/white"
                                android:textSize="13.5sp"
                                android:visibility="visible"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/SuMExploreIndo_Gern_Fantasy"
                                android:layout_width="76dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="8dp"
                                android:alpha="0.86"
                                android:background="@drawable/bg_gern_tr_bor_w_c_fixer"
                                android:fontFamily="@font/varela_round"
                                android:gravity="center"
                                android:text="Fantasy"
                                android:textColor="@android:color/white"
                                android:textSize="13.5sp"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/SuMExploreIndo_Gern_Comedy"
                                android:layout_width="78dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="8dp"
                                android:alpha="0.86"
                                android:background="@drawable/bg_gern_tr_bor_w_c_fixer"
                                android:fontFamily="@font/varela_round"
                                android:gravity="center"
                                android:text="Comedy"
                                android:textColor="@android:color/white"
                                android:textSize="13.5sp"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/SuMExploreIndo_Gern_SliceofLife"
                                android:layout_width="100dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="8dp"
                                android:alpha="0.86"
                                android:background="@drawable/bg_gern_tr_bor_w_c_fixer"
                                android:fontFamily="@font/varela_round"
                                android:gravity="center"
                                android:text="Slice of Life"
                                android:textColor="@android:color/white"
                                android:textSize="13.5sp"
                                android:visibility="visible"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/SuMExploreIndo_Gern_SciFi"
                                android:layout_width="63dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="8dp"
                                android:alpha="0.86"
                                android:background="@drawable/bg_gern_tr_bor_w_c_fixer"
                                android:fontFamily="@font/varela_round"
                                android:gravity="center"
                                android:text="Sci-Fi"
                                android:textColor="@android:color/white"
                                android:textSize="13.5sp"
                                android:visibility="gone"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/SuMExploreIndo_Gern_Supernatural"
                                android:layout_width="110dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="8dp"
                                android:alpha="0.86"
                                android:background="@drawable/bg_gern_tr_bor_w_c_fixer"
                                android:fontFamily="@font/varela_round"
                                android:gravity="center"
                                android:text="Supernatural"
                                android:textColor="@android:color/white"
                                android:textSize="13.5sp"
                                android:visibility="visible"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/SuMExploreIndo_Gern_Mystery"
                                android:layout_width="78dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="8dp"
                                android:alpha="0.86"
                                android:background="@drawable/bg_gern_tr_bor_w_c_fixer"
                                android:fontFamily="@font/varela_round"
                                android:gravity="center"
                                android:text="Mystery"
                                android:textColor="@android:color/white"
                                android:textSize="13.5sp"
                                android:visibility="visible"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <TextView
                    android:id="@+id/SuMExploreInfo_MangaTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/varela_round"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="18dp"
                    android:text="Fumetsu anata e"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />


                <TextView
                    android:id="@+id/SuMExploreInfo_MangaAuthors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-4dp"
                    android:alpha="0.86"
                    android:fontFamily="@font/varela_round"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:text="Yoshitoki Ōima"
                    android:textColor="@android:color/white"
                    android:textSize="14.5sp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <RelativeLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                    <RelativeLayout
                        android:layout_marginTop="-28dp"
                        android:gravity="left"
                        android:paddingStart="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_centerInParent="true"
                            android:alpha="0.86"
                            android:background="@drawable/bg_info_disc_btn"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="ShowExploreMangaInfoDisc"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="2dp"
                            android:text="show description"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />
                    </RelativeLayout>
                </RelativeLayout>


            </LinearLayout>
            <RelativeLayout
                android:paddingStart="12dp"
                android:paddingBottom="0dp"
                android:alpha="0.64"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RtlSymmetry">

                <RelativeLayout
                    android:layout_marginEnd="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/ic_visibility_white_24dp" />

                    <TextView
                        android:id="@+id/SuMExploreInfo_MangaViewsTXT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="26dp"
                        android:fontFamily="@font/varela_round"
                        android:text="392"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/SuMExploreInfo_MangaAgeRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/varela_round"
                    android:text="16+"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>