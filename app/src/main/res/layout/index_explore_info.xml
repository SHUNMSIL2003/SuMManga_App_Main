<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
               <RelativeLayout
                   android:id="@+id/SuMExploreInfo_MangaBGColor"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <RelativeLayout
                       android:id="@+id/SuMExploreInfo_MangaBGABSBlured"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <View
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:alpha="0.45"
                           android:background="@android:color/black" />
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical">
                           <LinearLayout
                               android:orientation="vertical"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content">
                               <RelativeLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <View
                                       android:layout_width="match_parent"
                                       android:layout_height="68dp"
                                       android:alpha="0.32"
                                       android:background="@android:color/black" />

                                   <View
                                       android:layout_width="36dp"
                                       android:layout_height="36dp"
                                       android:layout_marginStart="12dp"
                                       android:layout_marginTop="32dp"
                                       android:background="@drawable/ic_arrow_back_white_36dp"
                                       android:onClick="CloseSuMExploreInfo" />
                               </RelativeLayout>
                               <RelativeLayout
                                   android:id="@+id/SuMExploreInfo_MangaBluredBG"
                                   android:layout_width="match_parent"
                                   android:layout_height="224dp"
                                   android:gravity="top">

                                   <View
                                       android:layout_width="match_parent"
                                       android:layout_height="224dp"
                                       android:alpha="0.32"
                                       android:background="@android:color/black" />

                                   <RelativeLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:gravity="top"
                                       android:orientation="vertical"
                                       android:paddingStart="18dp"
                                       android:paddingTop="18dp"
                                       android:paddingEnd="0dp">

                                       <include layout="@layout/explore_info_toppart" />

                                   </RelativeLayout>
                               </RelativeLayout>
                           </LinearLayout>

                           <RelativeLayout
                               android:paddingBottom="100dp"
                               android:layout_width="match_parent"
                               android:layout_height="fill_parent">

                               <WebView
                                   android:id="@+id/SuMWebViewIndex5"
                                   style="@android:style/Widget.Material.WebView"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:background="@android:color/transparent"
                                   android:fontFamily="@font/varela_round"
                                   android:visibility="visible"
                                   app:layout_constraintBottom_toBottomOf="parent"
                                   app:layout_constraintEnd_toStartOf="parent"
                                   app:layout_constraintStart_toStartOf="parent"
                                   app:layout_constraintTop_toTopOf="parent" >


                               </WebView>
                           </RelativeLayout>
                       </LinearLayout>

                   </RelativeLayout>
               </RelativeLayout>
       </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>