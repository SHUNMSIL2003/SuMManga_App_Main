<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    app:layout_constraintHeight_default="wrap"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/SuMExplore_FlexibleGenreCard_CardHeightElm"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fadeScrollbars="false"
                    android:scrollIndicators="none"
                    android:scrollbarAlwaysDrawHorizontalTrack="false"
                    android:scrollbarAlwaysDrawVerticalTrack="false"
                    android:scrollbarSize="0dp"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="18dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_ALL_Toggle"
                            android:layout_width="56dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="All"
                            android:textColor="@android:color/white"
                            android:textSize="17.5sp"
                            tools:ignore="HardcodedText,UnusedAttribute" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_Action_Toggle"
                            android:layout_width="78dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="Action"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,UnusedAttribute" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_Drama_Toggle"
                            android:layout_width="88dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="Drama"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:visibility="visible"
                            tools:ignore="HardcodedText,UnusedAttribute" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_Fantasy_Toggle"
                            android:layout_width="96dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="Fantasy"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,UnusedAttribute" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_Comedy_Toggle"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="Comedy"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,UnusedAttribute" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_SliceofLife_Toggle"
                            android:layout_width="132dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="Slice of Life"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,UnusedAttribute" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_SciFi_Toggle"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="Sci-Fi"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,UnusedAttribute" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_Supernatural_Toggle"
                            android:layout_width="142dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="Supernatural"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,UnusedAttribute" />

                        <TextView
                            android:id="@+id/SuMExplore_Gern_Mystery_Toggle"
                            android:layout_width="98dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:alpha="0.86"
                            android:background="@drawable/bg_gern_tr_bor_w_c_fixer_home"
                            android:clipToOutline="true"
                            android:fontFamily="@font/varela_round"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:onClick="LoadGernXInHome"
                            android:text="Mystery"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:ignore="HardcodedText,UnusedAttribute" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/scout_recycler_view_H"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="top">

                <LinearLayout
                    android:id="@+id/scout_recycler_view_Width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="-8dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="0dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/scout_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="112dp" />

                </LinearLayout>
            </RelativeLayout>

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/SuMExploreProssC"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:alpha="0.64"
                android:indeterminate="true"
                android:indeterminateBehavior="cycle"
                android:indeterminateOnly="true"
                android:progress="0"
                app:indicatorColor="@android:color/darker_gray"
                app:trackColor="@android:color/transparent"
                app:trackCornerRadius="2dp"
                app:trackThickness="4dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>